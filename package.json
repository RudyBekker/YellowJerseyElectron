{
  "name": "YellowJersey",
  "version": "1.2.0",
  "private": true,
  "main": "public/electron.js",
  "author": "Rudy Bekker",
  "description": "YellowJersey Desktop Application.",
  "license": "(MIT or GPL-3.0)",
  "dependencies": {
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "concurrently": "^6.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-localstorage": "^1.0.5",
    "electron-store": "^8.0.0",
    "jquery": "^3.6.0",
    "node-fetch": "^2.6.1",
    "react": "^17.0.1",
    "react-bootstrap": "^1.6.1",
    "react-dom": "^17.0.1",
    "react-open-weather": "^1.1.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "wait-on": "^5.2.1",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "react": "react-scripts start",
    "start": "electron-forge start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-mac": "npx @electron-forge/cli make --platform darwin",
    "make-linux": "npx @electron-forge/cli make --platform linux",
    "make-windows": "npx @electron-forge/cli make --platform win32",
    "dist:windows": "electron-builder --windows"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "electron": "^12.0.0",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "com.example.electron-cra",
    "files": [
      "./build/**/*",
      "public/electron.js"
    ],
    "directories": {
      "buildResources": "dist"
    },
    "electronDownload": {
      "cache": "./.electron-cache"
    },
    "win": {
      "icon": "./public/logo512.png"
    }
  },
  "config": {
    "forge": {
      "electronPackagerConfig": {
        "icon": "https://img.icons8.com/emoji/452/hammer-and-pick.png"
      },
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_react_demo"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  }
}
